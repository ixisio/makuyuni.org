# top-most EditorConfig file
root = true

# file formatting defaults
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.js]
indent_style = space
indent_size = 4

[*.scss]
indent_style = space
indent_size = 4

[*.html]
indent_style = space
indent_size = 4

[*.php]
indent_style = space
indent_size = 4
